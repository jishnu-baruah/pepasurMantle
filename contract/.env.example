# EVM Smart Contract Configuration
# Copy this file to .env and fill in your values

# IMPORTANT: Never commit your actual private keys to version control

# Deployer private key (for deploying contracts)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DEPLOYER_PRIVATE_KEY=0x_your_deployer_private_key_here

# Server signer address (ECDSA - the address that will sign game settlements)
# This should be the address derived from the server's private key
SERVER_SIGNER_ADDRESS=0x_your_server_signer_address_here

# Fee recipient address (where house cut goes)
FEE_RECIPIENT_ADDRESS=0x_your_fee_recipient_address_here

# Network Configuration - U2U Network
U2U_RPC_URL=https://rpc-mainnet.uniultra.xyz
U2U_TESTNET_RPC_URL=https://rpc-nebulas-testnet.uniultra.xyz
U2U_EXPLORER_API_KEY=not-needed

# Network Configuration - Celo Network
CELO_RPC_URL=https://forno.celo.org
CELO_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org
CELO_SEPOLIA_RPC_URL=https://forno.celo-sepolia.celo-testnet.org
CELO_EXPLORER_API_KEY=your_celoscan_api_key_here

# Deployed contract address (will be set after deployment)
CONTRACT_ADDRESS=0x_your_contract_address_here

# Gas reporting (optional)
REPORT_GAS=false